@model Site.Models.AllFilesViewModel
@{
    var StartImages = Model.Images.ToList<Images>();
}
<script src="~/js/site.js"></script>

<div class="container-fluid">
    <div id="carouselControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/@Model.Categories.First(i => i.CategoryId == StartImages[0].CategoryId).CategoryLabel/@StartImages[0].ImgFileName" alt="@StartImages[0].Description" />
            </div>
            @for (int i = 1; i < StartImages.Count; i++)
            {
                <div class="carousel-item">
                    <img class="d-block w-100 h-100" src="~/Images/@Model.Categories.First(id => id.CategoryId == StartImages[i].CategoryId).CategoryLabel/@StartImages[i].ImgFileName" alt="@StartImages[i].Description">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="false"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="false"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
